# ===========================================
# RENDER DEPLOYMENT - ENVIRONMENT VARIABLES
# ===========================================
# Copy these to your Render service environment variables

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
# Get this from your Render PostgreSQL database dashboard
# Use the "Internal Database URL" for better performance
DATABASE_URL=postgresql://username:password@hostname/database_name

# ===========================================
# JWT CONFIGURATION (REQUIRED)
# ===========================================
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# SERVER CONFIGURATION (REQUIRED)
# ===========================================
PORT=5000
NODE_ENV=production

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL - for OTP)
# ===========================================
# Gmail Configuration (Recommended)
# 1. Enable 2FA on your Gmail account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the generated app password below
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-character-app-password

# Alternative: Use any SMTP service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Add your frontend URLs (comma-separated)
# Example: ALLOWED_ORIGINS=https://amzify-customer.onrender.com,https://amzify-admin.onrender.com,https://amzify-seller.onrender.com
ALLOWED_ORIGINS=https://your-frontend-url.onrender.com

# ===========================================
# OPTIONAL CONFIGURATIONS
# ===========================================
# Enable if using external AI services
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database pool settings (optional - Render handles this)
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10
